# TalkBut Configuration

git:
  # Option 1: Explicitly list repositories
  repositories:
    # - path: /Users/yourname/projects/my-project
    #   name: "my-project"
    # - path: ./relativePath
    #   name: "Current Project"
  
  # Option 2: Auto-scan paths for git repositories
  # All git repos under these paths will be discovered automatically
  scan_paths:
    # - /Users/yourname/Documents/GitHub
    # - /Users/yourname/projects
  scan_depth: 2  # How deep to search for repos (default: 2)
  
  default_branch: main
  author_filter: null  # Set to your email to filter commits: "user@example.com"

ai:
  provider: gemini  # Options: gemini, openai
  api_key_env: GEMINI_API_KEY
  model: gemini-2.0-flash-exp
  temperature: 0.3
  top_p: 0.95
  top_k: 40
  max_output_tokens: 8192

report:
  default_format: markdown
  include_stats: true
  include_file_list: false
  sort_order: asc  # asc = chronological (morning -> evening), desc = reverse
  group_by: category  # Options: category, date, author

storage:
  log_dir: ./data/logs
  retention_days: 90

schedule:
  enabled: false  # Whether automated daily logging is enabled
  time: "18:00"  # HH:MM format (24-hour), time to run automated logging each day
  status_file: ./data/schedule_status.json  # File to track schedule status and run history
  error_log: ./data/schedule_errors.log  # File to log errors from automated runs
